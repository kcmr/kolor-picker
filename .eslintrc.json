{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "brace-style": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer", "RGB2HEX"] }],
    "no-var": "off",
    "require-jsdoc": "off",
    "max-len": 0
  },
  "globals": {
    "Polymer": true,
    "CP": true
  }
}
